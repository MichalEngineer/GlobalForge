@{
    ViewData["Title"] = "Panel Administratora";
    var stats = ViewBag.Stats;
}

<div class="container my-5">
    <h1 class="mb-4">
        <i class="bi bi-shield-lock me-2"></i>Panel Administratora
    </h1>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="bi bi-people display-4 text-primary"></i>
                    <h3 class="mt-3">@stats.UsersCount</h3>
                    <p class="text-muted mb-0">Użytkownicy</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="bi bi-box-seam display-4 text-success"></i>
                    <h3 class="mt-3">@stats.ProductsCount</h3>
                    <p class="text-muted mb-0">Produkty (razem)</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="bi bi-check-circle display-4 text-info"></i>
                    <h3 class="mt-3">@stats.ActiveProductsCount</h3>
                    <p class="text-muted mb-0">Aktywne produkty</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="bi bi-bag-check display-4 text-warning"></i>
                    <h3 class="mt-3">@stats.OrdersCount</h3>
                    <p class="text-muted mb-0">Zamówienia</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-people me-2"></i>Zarządzanie użytkownikami
                    </h5>
                    <p class="card-text">Przeglądaj, blokuj i usuwaj konta użytkowników</p>
                    <a asp-action="Users" class="btn btn-primary">
                        <i class="bi bi-arrow-right me-1"></i>Przejdź do użytkowników
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-box-seam me-2"></i>Zarządzanie produktami
                    </h5>
                    <p class="card-text">Moderuj oferty i usuwaj produkty naruszające regulamin</p>
                    <a asp-action="Products" class="btn btn-success">
                        <i class="bi bi-arrow-right me-1"></i>Przejdź do produktów
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-bag-check me-2"></i>Zarządzanie zamówieniami
                    </h5>
                    <p class="card-text">Przeglądaj wszystkie zamówienia w systemie</p>
                    <a asp-action="Orders" class="btn btn-warning">
                        <i class="bi bi-arrow-right me-1"></i>Przejdź do zamówień
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
