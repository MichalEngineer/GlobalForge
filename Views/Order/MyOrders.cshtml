@model IEnumerable<GlobalForge.Web.Models.Order>

@{
    ViewData["Title"] = "Moje zamówienia";
}

<div class="container my-5">
    <h1 class="mb-4">
        <i class="bi bi-bag-check me-2"></i>Moje zamówienia
    </h1>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-12 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <div class="row align-items-center">
                                <div class="col-md-3">
                                    <small class="text-muted">Numer zamówienia</small>
                                    <h6 class="mb-0">#@order.Id</h6>
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted">Data zamówienia</small>
                                    <h6 class="mb-0">@order.CreatedAt.ToString("dd.MM.yyyy HH:mm")</h6>
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted">Suma</small>
                                    <h6 class="mb-0 text-success">@order.TotalAmount.ToString("C", new System.Globalization.CultureInfo("pl-PL"))</h6>
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted">Status</small>
                                    <h6 class="mb-0">
                                        @if (order.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">Oczekuje</span>
                                        }
                                        else if (order.Status == "Processing")
                                        {
                                            <span class="badge bg-info">W realizacji</span>
                                        }
                                        else if (order.Status == "Shipped")
                                        {
                                            <span class="badge bg-primary">Wysłane</span>
                                        }
                                        else if (order.Status == "Delivered")
                                        {
                                            <span class="badge bg-success">Dostarczone</span>
                                        }
                                        else if (order.Status == "Cancelled")
                                        {
                                            <span class="badge bg-danger">Anulowane</span>
                                        }
                                    </h6>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <h6 class="mb-3">Zamówione produkty:</h6>
                            <div class="table-responsive">
                                <table class="table table-sm table-borderless">
                                    <thead>
                                        <tr>
                                            <th>Produkt</th>
                                            <th>Sprzedawca</th>
                                            <th class="text-center">Ilość</th>
                                            <th class="text-end">Cena</th>
                                            <th class="text-end">Razem</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in order.OrderItems)
                                        {
                                            <tr>
                                                <td>
                                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId" class="text-decoration-none">
                                                        @item.Product.Name
                                                    </a>
                                                </td>
                                                <td>@item.Product.Seller.FirstName @item.Product.Seller.LastName</td>
                                                <td class="text-center">@item.Quantity</td>
                                                <td class="text-end">@item.UnitPrice.ToString("C", new System.Globalization.CultureInfo("pl-PL"))</td>
                                                <td class="text-end">@item.TotalPrice.ToString("C", new System.Globalization.CultureInfo("pl-PL"))</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            
                            <div class="mt-3">
                                <div class="row">
                                    <div class="col-md-6">
                                        <small class="text-muted">Adres dostawy:</small>
                                        <p class="mb-1"><pre class="mb-0">@order.DeliveryAddress</pre></p>
                                        <small class="text-muted">Metoda płatności:</small>
                                        <p class="mb-0">@order.PaymentMethod</p>
                                    </div>
                                    <div class="col-md-6 text-md-end">
                                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-success btn-sm">
                                            <i class="bi bi-eye me-1"></i>Szczegóły
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <h4 class="mt-3">Nie masz jeszcze żadnych zamówień</h4>
            <p class="text-muted">Przeglądaj katalog i dokonaj pierwszego zakupu</p>
            <a href="@Url.Action("Index", "Product")" class="btn btn-success mt-3">
                <i class="bi bi-shop me-1"></i>Przeglądaj produkty
            </a>
        </div>
    }
</div>
