<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GlobalForge</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GlobalForge.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-custom">
            <div class="navbar-content">
                <div class="navbar-left">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-globe"></i>
                    </a>
                    <ul class="navbar-list">
                        <li class="navbar-item">
                            <a asp-area="" asp-controller="Home" asp-action="Index">Strona główna</a>
                        </li>
                        <li class="navbar-item">
                            <a asp-area="" asp-controller="Product" asp-action="Index">Produkty</a>
                        </li>
                    </ul>
                </div>

                <div class="navbar-right">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="navbar-profile">
                            <a asp-controller="Account" asp-action="Profile" class="profile-link">
                                <span class="profile-icon">
                                    <i class="bi bi-person-circle"></i>
                                </span>
                                <span class="profile-text">Profil</span>
                            </a>
                        </div>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="logout-button">
                                <span>Wyloguj</span>
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="login-button">Zaloguj się</a>
                        <a asp-controller="Account" asp-action="Register" class="register-button">Rejestracja</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="content-wrapper">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="container-custom mt-4">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="container-custom mt-4">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        }
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-custom">
        <div class="container-custom">
            <div class="footer-content">
                <div class="footer-left">
                    <i class="bi bi-globe"></i> <strong>GlobalForge</strong> - Your ultimate marketplace solution
                </div>
                <div class="footer-right">
                    &copy; 2026 GlobalForge. All rights reserved.
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
