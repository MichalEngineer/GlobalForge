@model GlobalForge.Web.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Rejestracja";
}

<div class="auth-page">
    <div class="container-custom py-5">
        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-9">
                <div class="auth-card">
                    <div class="auth-header">
                        <div class="auth-icon">
                            <i class="bi bi-person-plus"></i>
                        </div>
                        <h2 class="auth-title">Utwórz konto</h2>
                        <p class="auth-subtitle">Dołącz do społeczności GlobalForge</p>
                    </div>
                    
                    <div class="auth-body">
                        <form asp-action="Register" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="FirstName" class="form-label">
                                            <i class="bi bi-person me-1"></i> Imię
                                        </label>
                                        <input asp-for="FirstName" class="form-control form-control-modern" placeholder="Jan" />
                                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="LastName" class="form-label">
                                            <i class="bi bi-person me-1"></i> Nazwisko
                                        </label>
                                        <input asp-for="LastName" class="form-control form-control-modern" placeholder="Kowalski" />
                                        <span asp-validation-for="LastName" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email" class="form-label">
                                    <i class="bi bi-envelope me-1"></i> Email
                                </label>
                                <input asp-for="Email" class="form-control form-control-modern" placeholder="twoj@email.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="form-label">
                                    <i class="bi bi-telephone me-1"></i> Numer telefonu
                                </label>
                                <input asp-for="PhoneNumber" class="form-control form-control-modern" placeholder="+48 123 456 789" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Password" class="form-label">
                                            <i class="bi bi-lock me-1"></i> Hasło
                                        </label>
                                        <input asp-for="Password" class="form-control form-control-modern" placeholder="••••••••" />
                                        <span asp-validation-for="Password" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ConfirmPassword" class="form-label">
                                            <i class="bi bi-lock-fill me-1"></i> Potwierdź hasło
                                        </label>
                                        <input asp-for="ConfirmPassword" class="form-control form-control-modern" placeholder="••••••••" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="address-section">
                                <h5 class="section-subtitle-small">
                                    <i class="bi bi-geo-alt me-2"></i>Adres (opcjonalnie)
                                </h5>
                                
                                <div class="form-group">
                                    <label asp-for="Address" class="form-label">Ulica i numer</label>
                                    <input asp-for="Address" class="form-control form-control-modern" placeholder="ul. Przykładowa 12/34" />
                                    <span asp-validation-for="Address" class="text-danger small"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label asp-for="City" class="form-label">Miasto</label>
                                            <input asp-for="City" class="form-control form-control-modern" placeholder="Warszawa" />
                                            <span asp-validation-for="City" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label asp-for="PostalCode" class="form-label">Kod pocztowy</label>
                                            <input asp-for="PostalCode" class="form-control form-control-modern" placeholder="00-000" />
                                            <span asp-validation-for="PostalCode" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Country" class="form-label">Kraj</label>
                                            <input asp-for="Country" class="form-control form-control-modern" placeholder="Polska" />
                                            <span asp-validation-for="Country" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary-custom btn-block">
                                <i class="bi bi-person-plus me-2"></i>Zarejestruj się
                            </button>
                        </form>

                        <div class="auth-divider">
                            <span>lub</span>
                        </div>
                        
                        <p class="auth-footer-text">
                            Masz już konto? 
                            <a asp-action="Login" class="auth-link">Zaloguj się</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
