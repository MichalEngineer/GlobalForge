@model GlobalForge.Web.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Logowanie";
}

<div class="auth-page">
    <div class="container-custom py-5">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="auth-card">
                    <div class="auth-header">
                        <div class="auth-icon">
                            <i class="bi bi-box-arrow-in-right"></i>
                        </div>
                        <h2 class="auth-title">Zaloguj się</h2>
                        <p class="auth-subtitle">Witaj ponownie w GlobalForge</p>
                    </div>
                    
                    <div class="auth-body">
                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            
                            <div class="form-group">
                                <label asp-for="Email" class="form-label">
                                    <i class="bi bi-envelope me-1"></i> Email
                                </label>
                                <input asp-for="Email" class="form-control form-control-modern" placeholder="twoj@email.com" autofocus />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Password" class="form-label">
                                    <i class="bi bi-lock me-1"></i> Hasło
                                </label>
                                <input asp-for="Password" class="form-control form-control-modern" placeholder="••••••••" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="form-check mb-4">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label">Zapamiętaj mnie</label>
                            </div>

                            <button type="submit" class="btn btn-primary-custom btn-block">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Zaloguj się
                            </button>
                        </form>

                        <div class="auth-divider">
                            <span>lub</span>
                        </div>
                        
                        <p class="auth-footer-text">
                            Nie masz jeszcze konta? 
                            <a asp-action="Register" class="auth-link">Zarejestruj się</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
