@model GlobalForge.Web.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Zmiana hasła";
}

<div class="profile-page">
    <div class="container-custom py-5">
        <div class="row">
            <div class="col-lg-3 col-md-4 mb-4">
                <div class="profile-sidebar">
                    <div class="profile-avatar">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <h5 class="profile-name">@(User.Identity?.Name ?? "Użytkownik")</h5>
                    <div class="profile-menu">
                        <a asp-action="Profile" class="profile-menu-item">
                            <i class="bi bi-person"></i> Dane osobowe
                        </a>
                        <a asp-action="ChangePassword" class="profile-menu-item active">
                            <i class="bi bi-key"></i> Zmiana hasła
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-9 col-md-8">
                <div class="profile-content">
                    <div class="profile-header">
                        <h2 class="profile-title">
                            <i class="bi bi-shield-lock me-2"></i>Zmiana hasła
                        </h2>
                        <p class="profile-subtitle">Zaktualizuj swoje hasło aby chronić konto</p>
                    </div>

                    <form asp-action="ChangePassword" method="post" class="profile-form">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="form-section">
                            <div class="form-group">
                                <label asp-for="CurrentPassword" class="form-label">
                                    <i class="bi bi-lock me-1"></i> Obecne hasło
                                </label>
                                <input asp-for="CurrentPassword" class="form-control form-control-modern" placeholder="••••••••" />
                                <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="NewPassword" class="form-label">
                                    <i class="bi bi-key me-1"></i> Nowe hasło
                                </label>
                                <input asp-for="NewPassword" class="form-control form-control-modern" placeholder="••••••••" />
                                <span asp-validation-for="NewPassword" class="text-danger small"></span>
                                <small class="form-text text-muted">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Hasło musi zawierać minimum 6 znaków, wielką literę, małą literę oraz cyfrę.
                                </small>
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="form-label">
                                    <i class="bi bi-lock-fill me-1"></i> Potwierdź nowe hasło
                                </label>
                                <input asp-for="ConfirmPassword" class="form-control form-control-modern" placeholder="••••••••" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary-custom">
                                <i class="bi bi-check-circle me-2"></i>Zmień hasło
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <a asp-action="Profile" class="list-group-item list-group-item-action">
                    <i class="bi bi-person"></i> Dane osobowe
                </a>
                <a asp-action="ChangePassword" class="list-group-item list-group-item-action active">
                    <i class="bi bi-key"></i> Zmiana hasła
                </a>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label"></label>
                            <input asp-for="CurrentPassword" class="form-control" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label"></label>
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Hasło musi zawierać co najmniej 6 znaków, w tym małą i dużą literę oraz cyfrę.
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Zmień hasło</button>
                            <a asp-action="Profile" class="btn btn-outline-secondary">Anuluj</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
