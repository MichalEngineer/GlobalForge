@model GlobalForge.Web.Models.Cart
@{
    ViewData["Title"] = "Finalizacja zamówienia";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8">
            <h2 class="mb-4">
                <i class="bi bi-credit-card me-2"></i>Finalizacja zamówienia
            </h2>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-truck me-2"></i>Dane dostawy</h5>
                </div>
                <div class="card-body">
                    <form id="checkout-form">
                        <div class="mb-3">
                            <label for="deliveryAddress" class="form-label">Adres dostawy <span class="text-danger">*</span></label>
                            <textarea class="form-control" id="deliveryAddress" name="deliveryAddress" rows="3" required 
                                      placeholder="Ulica, numer domu/mieszkania&#10;Kod pocztowy Miasto&#10;Kraj"></textarea>
                            <div class="invalid-feedback">
                                Proszę podać adres dostawy.
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-wallet2 me-2"></i>Metoda płatności</h5>
                </div>
                <div class="card-body">
                    <div class="payment-methods">
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="payment-transfer" value="Przelew bankowy" checked>
                            <label class="form-check-label" for="payment-transfer">
                                <i class="bi bi-bank me-2"></i>Przelew bankowy
                            </label>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="payment-blik" value="BLIK">
                            <label class="form-check-label" for="payment-blik">
                                <i class="bi bi-phone me-2"></i>BLIK
                            </label>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="payment-card" value="Karta płatnicza">
                            <label class="form-check-label" for="payment-card">
                                <i class="bi bi-credit-card me-2"></i>Karta płatnicza
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="payment-cod" value="Za pobraniem">
                            <label class="form-check-label" for="payment-cod">
                                <i class="bi bi-cash me-2"></i>Za pobraniem (płatność przy odbiorze)
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Podsumowanie zamówienia</h5>
                </div>
                <div class="card-body">
                    <div class="order-summary">
                        @foreach (var item in Model.Items)
                        {
                            <div class="summary-item mb-2">
                                <div class="d-flex justify-content-between">
                                    <span class="text-truncate me-2">@item.ProductName</span>
                                    <span class="text-nowrap">x@item.Quantity</span>
                                </div>
                                <div class="text-end text-muted small">
                                    @item.TotalPrice.ToString("C", new System.Globalization.CultureInfo("pl-PL"))
                                </div>
                            </div>
                        }
                        <hr>
                        <div class="d-flex justify-content-between mb-2">
                            <strong>Liczba produktów:</strong>
                            <strong>@Model.TotalItems</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Wartość produktów:</span>
                            <span>@Model.TotalAmount.ToString("C", new System.Globalization.CultureInfo("pl-PL"))</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Dostawa:</span>
                            <span class="text-success">Gratis</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <h5>Razem do zapłaty:</h5>
                            <h5 class="text-success">@Model.TotalAmount.ToString("C", new System.Globalization.CultureInfo("pl-PL"))</h5>
                        </div>
                    </div>

                    <button type="button" class="btn btn-success w-100 mb-2" id="btn-place-order">
                        <i class="bi bi-check-circle me-1"></i>Złóż zamówienie
                    </button>
                    <a href="@Url.Action("Index", "Cart")" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-arrow-left me-1"></i>Wróć do koszyka
                    </a>

                    <div class="mt-3 text-center">
                        <small class="text-muted">
                            <i class="bi bi-shield-check me-1"></i>
                            Twoje dane są bezpieczne
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#btn-place-order').click(function() {
                var deliveryAddress = $('#deliveryAddress').val().trim();
                var paymentMethod = $('input[name="paymentMethod"]:checked').val();
                var button = $(this);

                // Walidacja
                if (!deliveryAddress) {
                    $('#deliveryAddress').addClass('is-invalid');
                    showToast('Proszę podać adres dostawy', 'error');
                    return;
                }

                $('#deliveryAddress').removeClass('is-invalid');

                // Wyłącz przycisk
                button.prop('disabled', true);
                button.html('<span class="spinner-border spinner-border-sm me-2"></span>Przetwarzanie...');

                $.ajax({
                    url: '@Url.Action("PlaceOrder", "Checkout")',
                    type: 'POST',
                    data: {
                        deliveryAddress: deliveryAddress,
                        paymentMethod: paymentMethod
                    },
                    success: function(response) {
                        if (response.success) {
                            window.location.href = '@Url.Action("OrderConfirmation", "Checkout")' + '?orderId=' + response.orderId;
                        } else {
                            showToast(response.message, 'error');
                            button.prop('disabled', false);
                            button.html('<i class="bi bi-check-circle me-1"></i>Złóż zamówienie');
                        }
                    },
                    error: function() {
                        showToast('Wystąpił błąd podczas składania zamówienia', 'error');
                        button.prop('disabled', false);
                        button.html('<i class="bi bi-check-circle me-1"></i>Złóż zamówienie');
                    }
                });
            });

            function showToast(message, type) {
                var bgClass = type === 'success' ? 'bg-success' : 'bg-danger';
                var icon = type === 'success' ? 'bi-check-circle-fill' : 'bi-x-circle-fill';
                
                var toast = $(`
                    <div class="position-fixed top-0 end-0 p-3" style="z-index: 9999; margin-top: 70px;">
                        <div class="toast show ${bgClass} text-white" role="alert">
                            <div class="toast-body">
                                <i class="bi ${icon} me-2"></i>${message}
                            </div>
                        </div>
                    </div>
                `);
                
                $('body').append(toast);
                setTimeout(function() {
                    toast.fadeOut(300, function() { $(this).remove(); });
                }, 3000);
            }
        });
    </script>
}
