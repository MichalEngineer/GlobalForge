@model GlobalForge.Web.Models.Order
@{
    ViewData["Title"] = "Potwierdzenie zamówienia";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-success">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                    </div>
                    <h1 class="text-success mb-3">Dziękujemy za zamówienie!</h1>
                    <p class="lead mb-4">Twoje zamówienie zostało złożone pomyślnie</p>
                    
                    <div class="alert alert-info mb-4">
                        <h5><i class="bi bi-info-circle me-2"></i>Numer zamówienia: <strong>#@Model.Id</strong></h5>
                        <p class="mb-0">Data złożenia: @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Szczegóły zamówienia</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-6 text-start">
                                    <strong>Adres dostawy:</strong>
                                </div>
                                <div class="col-6 text-end">
                                    <pre class="mb-0 text-end">@Model.DeliveryAddress</pre>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-6 text-start">
                                    <strong>Metoda płatności:</strong>
                                </div>
                                <div class="col-6 text-end">
                                    @Model.PaymentMethod
                                </div>
                            </div>
                            <hr>
                            <h6 class="mb-3">Zamówione produkty:</h6>
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Produkt</th>
                                            <th class="text-center">Ilość</th>
                                            <th class="text-end">Cena</th>
                                            <th class="text-end">Razem</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrderItems)
                                        {
                                            <tr>
                                                <td>@item.Product.Name</td>
                                                <td class="text-center">@item.Quantity</td>
                                                <td class="text-end">@item.UnitPrice.ToString("C", new System.Globalization.CultureInfo("pl-PL"))</td>
                                                <td class="text-end">@item.TotalPrice.ToString("C", new System.Globalization.CultureInfo("pl-PL"))</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr class="table-success">
                                            <th colspan="3" class="text-end">Suma:</th>
                                            <th class="text-end">@Model.TotalAmount.ToString("C", new System.Globalization.CultureInfo("pl-PL"))</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <p class="text-muted">
                            <i class="bi bi-envelope me-1"></i>
                            Potwierdzenie zamówienia zostało wysłane na Twój adres e-mail
                        </p>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="@Url.Action("Index", "Product")" class="btn btn-success">
                            <i class="bi bi-shop me-1"></i>Kontynuuj zakupy
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                            <i class="bi bi-house me-1"></i>Strona główna
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
